<h1>New post</h1>

<%= form_for @new_post, :url => { :action => "create" } do |f| %>
  <div class="form-group">
    <%= f.label :content %>
    <%= f.text_area :content, { :class => "form-control", :cols => 30, :rows => 20 } %><br />
  </div>
  <div class="form-group">
    <div class="row">
      <div class="col-md-4">
        <%= f.label :author %>
        <%= f.collection_select(:user_id, User.all, :id, :name, {}, { :class => "form-control" }) %>
      </div>
    </div>
  </div>
  <%= f.submit :class => "btn btn-default"  %>
<% end %>
<h1>New user</h1>

<%= form_for @new_user, :url => { :action => "create" } do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, html_options= { :class => "form-control", :placeholder => "Name" } %><br />
  </div>
  <div class="form-group">
    <%= f.label :email %>
    <%= f.email_field :email, html_options= { :class => "form-control", :placeholder => "Email" } %>
  </div>
  <%= f.submit :class => "btn btn-default"  %>
<% end %>